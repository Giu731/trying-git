<div class="item">
    <div>Agência</div>
    <div>
        <select name = "agency">
        {% for agency in agencyOptions %}
            <option 
                value = "{{agency.id}}"
                {% if car.agency_id == agency.id %}
                selected
                {% endif %}>{{agency.name}}
            </option>
        {% endfor %}
        </select>
    </div>
</div>

<div class="item">
    <div>Modelo</div>
    <div>
        <input
            type = "text"
            name = "model"
            value = "{{car.model_id}}"

        >
    </div>
</div>
<div class="item">
    <div>Modelo</div>
    <div>
        <select name = "model">
        {% for model in modelOptions %}
            <option 
                value = "{{model.id}}"
                {% if car.model_id == model.id %}
                selected
                {% endif %}>{{model.model}}
            </option>
        {% endfor %}
        </select>
    </div>
</div>

<div class="item">
    <div>Color</div>
    <div>
        <input
            type = "text"
            name = "color"
            value = "{{car.color}}"

        >
    </div>
</div>

<div class="item">
    <div>Placa</div>
    <div>
        <input
            type = "text"
            name = "plate"
            value = "{{car.plate}}"

        >
    </div>
</div>

<div class="item">
    <div>Preço da diária</div>
    <div>
        <input
            type = "text"
            name = "price"
            value = "{{car.price}}"

        >
    </div>
</div>

{% if car.status %}
<div class="item">
    <div>Disponível</div>
    <div>
        <span>
            <input
                type = "radio"
                name = "status"
                value="1"
                {% if car.status == "1" %}
                    checked
                {% endif %}> Sim
        </span>
        <span>
            <input
                type = "radio"
                name = "status"
                value="0"
                {% if car.status == "0" %}
                    checked
                {% endif %}> Não
        </span>
    </div>
</div>
{% endif %}


        